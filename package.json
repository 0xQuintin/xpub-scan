{
  "name": "@ledgerhq/xpub-scan",
  "version": "0.3.51",
  "description": "Master public key analysis tool",
  "main": "./lib/scan.js",
  "bin": {
    "xpub-scan": "./lib/scan.js"
  },
  "scripts": {
    "clean": "yarn cache clean --force && rm -rf lib/",
    "build": "tsc && chmod +x ./lib/scan.js",
    "test": "jest",
    "lint": "eslint .",
    "ts:check": "tsc --noEmit",
    "prettier": "prettier --write .",
    "ci": "yarn lint && yarn ts:check && prettier --list-different . && yarn test",
    "check:dep": "npm i --package-lock-only > /dev/null 2>&1 && depcheck --ignores=\"ts-node,tiny-secp256k1\" && check-outdated --ignore-packages tiny-secp256k1,@types/tiny-secp256k1 && npm audit --audit-level=low",
    "regression": "python3 .github/workflows/regression_tests/check.py",
    "dev:test": "yarn clean && yarn check:dep && yarn prettier && yarn ci && yarn && tsc -p .",
    "dev:test:all": "yarn clean && yarn check:dep && yarn prettier && yarn ci && yarn && tsc -p . && yarn regression"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com:LedgerHQ/xpub-scan.git"
  },
  "author": "Guillaume Lethuillier",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/LedgerHQ/xpub-scan"
  },
  "homepage": "https://github.com/LedgerHQ/xpub-scan#readme",
  "dependencies": {
    "@babel/core": "^7.16.0",
    "@babel/preset-env": "^7.16.4",
    "@babel/preset-typescript": "^7.16.0",
    "@types/bchaddrjs": "^0.4.0",
    "@types/bitcore-lib-cash": "^8.23.5",
    "@types/html-minifier": "^4.0.1",
    "@types/node": "^16.11.9",
    "@types/object-hash": "^2.2.1",
    "@types/tiny-secp256k1": "^1.0.0",
    "@types/yargs": "^17.0.7",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "axios": "^0.24.0",
    "bchaddrjs": "^0.5.2",
    "bignumber.js": "^9.0.1",
    "bip32": "^3.0.1",
    "bitcoinjs-lib": "^6.0.0",
    "bitcore-lib-cash": "^8.25.22",
    "chalk": "^4.1.2",
    "check-outdated": "^2.10.2",
    "coininfo": "^5.1.0",
    "date-fns": "^2.26.0",
    "dotenv": "^10.0.0",
    "eslint": "^8.2.0",
    "html-minifier": "^4.0.0",
    "jest": "^27.3.1",
    "object-hash": "^2.2.0",
    "prettier": "2.4.1",
    "tiny-secp256k1": "^1.0.0",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.2",
    "yargs": "^17.2.1"
  }
}
