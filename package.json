{
  "name": "@ledgerhq/xpub-scan",
  "version": "0.3.47",
  "description": "Master public key analysis tool",
  "bin": {
    "xpub-scan": "./lib/scan.js"
  },
  "scripts": {
    "clean": "yarn cache clean --force && rm -rf lib/",
    "build": "tsc && chmod +x ./lib/scan.js",
    "test": "jest",
    "lint": "eslint .",
    "ts:check": "tsc --noEmit",
    "prettier": "prettier --write .",
    "ci": "yarn lint && yarn ts:check && prettier --list-different . && yarn test",
    "check:dep": "depcheck --ignores=\"ts-node\" && npm outdate && npm audit --audit-level=low",
    "regression": "python3 .github/workflows/regression_tests/check.py",
    "dev:test:all": "yarn clean && yarn check:dep && yarn prettier && yarn ci && yarn && tsc -p . && yarn regression"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com:LedgerHQ/xpub-scan.git"
  },
  "author": "Guillaume Lethuillier",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/LedgerHQ/xpub-scan"
  },
  "homepage": "https://github.com/LedgerHQ/xpub-scan#readme",
  "dependencies": {
    "@types/object-hash": "^2.2.1",
    "axios": "^0.24.0",
    "bchaddrjs": "^0.5.2",
    "bignumber.js": "^9.0.1",
    "bitcoinjs-lib": "^5.2.0",
    "chalk": "^4.1.2",
    "coininfo": "^5.1.0",
    "dotenv": "^10.0.0",
    "html-minifier": "^4.0.0",
    "object-hash": "^2.2.0",
    "ts-node": "^10.4.0",
    "yargs": "^17.2.1"
  },
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@babel/preset-env": "^7.16.0",
    "@babel/preset-typescript": "^7.16.0",
    "@types/bchaddrjs": "^0.4.0",
    "@types/bip32": "^2.0.0",
    "@types/bitcore-lib-cash": "^8.23.5",
    "@types/chalk": "^2.2.0",
    "@types/dotenv": "^8.2.0",
    "@types/html-minifier": "^4.0.1",
    "@types/node": "^16.11.6",
    "@types/yargs": "^17.0.5",
    "@typescript-eslint/eslint-plugin": "^5.2.0",
    "@typescript-eslint/parser": "^5.2.0",
    "bip32": "^2.0.6",
    "bitcore-lib-cash": "^8.25.22",
    "date-fns": "^2.25.0",
    "eslint": "^8.1.0",
    "jest": "^27.3.1",
    "prettier": "2.4.1",
    "typescript": "^4.4.4"
  }
}
